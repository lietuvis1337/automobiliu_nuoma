<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_entry_description"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:paddingBottom="20dp" />

    <EditText
        android:id="@+id/entry_vardas"
        android:hint="@string/add_entry_vardas"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="10dp"
        android:background="@color/colorEdit"
        android:textColorHint="@color/colorHint"
        android:textColor="@color/colorWhite"
        android:padding="10dp"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/entry_pavarde"
        android:hint="@string/add_entry_pavarde"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/colorEdit"
        android:textColorHint="@color/colorHint"
        android:textColor="@color/colorWhite"
        android:padding="10dp" />

    <EditText
        android:id="@+id/entry_asmenskodas"
        android:hint="@string/add_entry_asmenskodas"
        android:layout_width="match_parent"
        android:fontFamily="sans-serif"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:background="@color/colorEdit"
        android:textColorHint="@color/colorHint"
        android:textColor="@color/colorWhite"
        android:padding="10dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/entry_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            android:text="@string/add_entry_submit"
            android:layout_marginRight="5dp"
            android:background="@color/colorButton"
            android:textColor="@color/colorWhite" />

    </LinearLayout>

</LinearLayout>
